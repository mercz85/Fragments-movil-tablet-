<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutFragments">

    <fragment
        android:id="@+id/botones_fragment"
        android:tag="btnFrg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:background="@android:color/holo_orange_dark"
        tools:layout="@layout/botones_view"
        class="es.iesnervion.mrequena.a18ejfragcolores.BotonesFragment">
        <!--android:name="es.iesnervion.mrequena.a18ejfragcolores.BotonesFragment"-->

    </fragment>

    <fragment
        android:id="@+id/color_fragment"
        android:tag="clrFrg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"

        android:background="@android:color/holo_green_dark"
        tools:layout="@layout/color_view"
        class="es.iesnervion.mrequena.a18ejfragcolores.ColorFragment"/>
    <!--android:name="es.iesnervion.mrequena.a18ejfragcolores.ColorFragment"-->

</LinearLayout>